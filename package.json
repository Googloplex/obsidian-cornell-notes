{
  "name": "obsidian-cornell-notes",
  "version": "1.0.0",
  "description": "Cornell Notes plugin for Obsidian",
  "main": "main.js",
  "scripts": {
    "build": "esbuild main.ts --bundle --external:obsidian --external:@codemirror/state --external:@codemirror/view --outfile=main.js --format=cjs --platform=node --target=es2018",
    "dev": "esbuild main.ts --bundle --external:obsidian --external:@codemirror/state --external:@codemirror/view --outfile=main.js --format=cjs --platform=node --target=es2018 --watch",
    "release": "npm run build && node -e \"const fs=require('fs');const d='release/cornell-notes';fs.mkdirSync(d,{recursive:true});['main.js','manifest.json','styles.css'].forEach(f=>fs.copyFileSync(f,d+'/'+f));console.log('Release ready: '+d)\"",
    "deploy": "npm run release && node scripts/deploy.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "obsidian": "latest",
    "obsidian-typings": "^4.99.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "monkey-around": "^3.0.0"
  }
}
